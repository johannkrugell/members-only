<%= render "shared/navigation" %>
<div class="bg-red min-h-screen flex flex-col">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h1 class="mb-8 text-3xl text-center pt-2">Sign In</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class:"block border border-grey-light w-full p-3 rounded mb-4" 
            %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password",
                class:"block border border-grey-light w-full p-3 rounded mb-4" 
            %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Sign In", class: "w-full text-center py-3 rounded 
              bg-black text-white hover:bg-green-dark focus:outline-none my-1" 
            %>
          </div>
        <% end %>
        <div class="text-center text-grey-dark mt-6">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>
