      <% @posts.each do |post| %>
        <div class="pl-10 rounded-xl group sm:flex space-x-6 bg-white bg-opacity-50 hover:rounded-2xl">
          <div class="sm:w-7/12 pl-0 p-5">
            <div class="space-y-2 pl-2">
              <div>
                <span class="text-xs font-medium text-gray-400 uppercase"><%= post.created_at.strftime("%B %d, %Y") %></span>
                <!-- If a user is logged in display the uer email -->
                <span class="text-xs font-medium text-gray-400 uppercase"><%= current_user.nil? ? "Anonymous": post.user.email %></span>
              </div>
                <div class="space-y-4">
                  <h4 class="text-2xl font-semibold text-gray-800"><%= link_to post.title, posts_path %></h4>
                  <p class="text-gray-600"><%= link_to post.body.truncate(150), posts_path %></p>
                </div>

                <%= link_to "Read more", posts_path, class: "block w-max text-indigo-400" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 
